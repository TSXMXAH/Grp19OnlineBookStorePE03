@page "/bookstocks/edit"
@using Microsoft.EntityFrameworkCore
@using Grp19OnlineBookStorePE03.Classes
@inject IDbContextFactory<Grp19OnlineBookStorePE03.Data.Grp19OnlineBookStorePE03Context> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>BookStock</h2>
<hr />
@if (BookStock is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="BookStock" OnValidSubmit="UpdateBookStock" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="BookStock.Id" value="@BookStock.Id" />
                <div class="mb-3">
                    <label for="bookid" class="form-label">BookId:</label>
                    <InputNumber id="bookid" @bind-Value="BookStock.BookId" class="form-control" />
                    <ValidationMessage For="() => BookStock.BookId" class="text-danger" />
                </div>
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantity:</label>
                    <InputNumber id="quantity" @bind-Value="BookStock.Quantity" class="form-control" />
                    <ValidationMessage For="() => BookStock.Quantity" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/bookstocks">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private BookStock? BookStock { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        BookStock ??= await context.BookStock.FirstOrDefaultAsync(m => m.Id == Id);

        if (BookStock is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateBookStock()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(BookStock!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!BookStockExists(BookStock!.Id))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/bookstocks");
    }

    private bool BookStockExists(int id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.BookStock.Any(e => e.Id == id);
    }
}
